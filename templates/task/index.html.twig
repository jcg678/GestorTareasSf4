{% extends 'base.html.twig' %}

{% block title %}Hello TaskController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Todas las tareas! âœ…</h1>
    <table>
        <tr>
            <th>Tarea</th>
            <th>Prioridad</th>
            <th>Horas presupuestadas</th>
            <th>Acciones</th>
        </tr>
        {% for task in tasks %}
            <tr>
                <td>{{ task.title }}</td>

                <td>
                    {% if task.priority == 'high' %}
                    Alta
                    {% endif %}
                    {% if task.priority == 'medium' %}
                    Media
                    {% endif %}
                    {% if task.priority == 'low' %}
                    Baja
                    {% endif %}
                </td>

                <td>{{ task.hours }}</td>
                <td class="buttons">
                    <a href="{{ path('task_detail',{'id':task.id}) }}" class="btn-view">Ver</a>
                    <a href="" class="btn-edit">Editar</a>
                    <a href="" class="btn-delete">Borrar</a>
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
